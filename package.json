{
  "name": "trade-signal",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "dotenv -e .env -- turbo run dev",
    "dev:web": "dotenv -e .env -- turbo run dev --filter @trade-signal/web",
    "dev:core": "dotenv -e .env -- turbo run dev --filter @trade-signal/core",
    "build": "turbo run build",
    "build:web": "turbo run build --filter @trade-signal/web",
    "build:core": "turbo run build --filter @trade-signal/core",
    "start": "dotenv -e .env -- turbo run start",
    "start:web": "dotenv -e .env -- turbo run start --filter @trade-signal/web",
    "start:core": "dotenv -e .env -- turbo run start --filter @trade-signal/core",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "db:build": "turbo run build --filter @trade-signal/database",
    "db:generate": "dotenv -e .env -- turbo run db:generate --filter @trade-signal/database",
    "db:push": "dotenv -e .env -- turbo run db:push --filter @trade-signal/database",
    "db:studio": "dotenv -e .env -- turbo run db:studio --filter @trade-signal/database",
    "shared:build": "turbo run build --filter @trade-signal/shared",
    "shared:dev": "turbo run dev --filter @trade-signal/shared",
    "shared:lint": "turbo run lint --filter @trade-signal/shared",
    "shared:format": "turbo run format --filter @trade-signal/shared",
    "shared:clean": "turbo run clean --filter @trade-signal/shared"
  },
  "packageManager": "pnpm@9.4.0",
  "engines": {
    "node": ">=20.8.0",
    "pnpm": ">=9.4.0"
  },
  "devDependencies": {
    "dotenv-cli": "^7.0.0",
    "pino-pretty": "^13.0.0",
    "turbo": "^2.4.4"
  }
}
